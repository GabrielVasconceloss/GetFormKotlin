<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.FormDetailActivity"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/Blue_dark_icetar"
        tools:ignore="MissingConstraints"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_form_title_details"
            android:layout_width="wrap_content"
            android:text="Title:"
            android:fontFamily="@font/rubik_medium"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edt_Form_Title"
            android:hint="Add a Title Form"
            android:fontFamily="@font/rubik_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_form_description_details"
            android:layout_width="wrap_content"
            android:fontFamily="@font/rubik_medium"
            android:text="Description:"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edt_Form_Description"
            android:hint="Add a Description Form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_medium"
            android:layout_margin="25dp"
            android:text="Create"/>



    </LinearLayout>


</LinearLayout>